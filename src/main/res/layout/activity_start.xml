<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/off_white"
        tools:context=".PaymentActivity"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.80">

            <ImageView
                android:layout_width="149dp"
                android:layout_height="198dp"
                android:id="@+id/imageView"
                android:background="@drawable/novita_icon" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Novita Terminal"
                    android:id="@+id/textView3"
                    android:layout_weight="1.80" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:onClick="paymentSamplesClick"
            android:text="@string/label_Start"
            android:id="@+id/menu_button_payment"
            style="@style/aevi_button"
             />

        <FrameLayout
            android:layout_width="326dp"
            android:layout_height="278dp"
            android:layout_gravity="center_horizontal"></FrameLayout>

        <Button
            android:onClick="printingSamplesClick"
            android:text="@string/label_Tools"
            android:id="@+id/menu_button_printing"
            style="@style/aevi_button"
            android:layout_width="114dp" />

    </LinearLayout>
</ScrollView>